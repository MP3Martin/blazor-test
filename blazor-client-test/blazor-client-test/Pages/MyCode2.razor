@page "/mycode2"

<PageTitle>@title</PageTitle>

<h1>@title</h1>

<pre><code>@(textOut)</code></pre>

@* <button class="btn btn-primary" @onclick="update">Update</button> *@

<div class="snake-grid-container">
	@for (int i = 0; i < snakeArray.GetLength(0); i++) {
		@for (int j = 0; j < snakeArray.GetLength(1); j++) {
			int valueData = snakeArray[i, j];
			var colors = new Dictionary<int, string> { 
				{ 1, "white" },
				{ 0, "#393939" }
			};
			string color = colors[valueData];
			<div style="background-color: @(color) !important;" />
		}
	}
</div>

<input @onkeydown="ChangeDirection" id="snake_control_input" />
<div style="margin-bottom: 1rem;" />

<style>
	:root {
		--snake-array-size: @(snakeArraySize);
	}
</style>

@code {
	private string title = "Snake";
	protected override async Task OnInitializedAsync() {
		OnPageLoad();
	}
}